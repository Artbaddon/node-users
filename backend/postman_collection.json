    {
      "name": "üß™ Permission Testing",
      "item": [
        {
          "name": "Test users.read Permission",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/web-users",
              "host": ["{{baseUrl}}"],
              "path": ["web-users"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Should require users.read permission', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 403]);",
                  "    if (pm.response.code === 403) {",
                  "        pm.expect(pm.response.text()).to.include('users.read');",
                  "    }",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Test users.delete Permission",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/web-users/999",
              "host": ["{{baseUrl}}"],
              "path": ["web-users", "999"]
            }
