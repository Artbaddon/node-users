          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Should require users.delete permission', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 403, 404]);",
                  "    if (pm.response.code === 403) {",
                  "        pm.expect(pm.response.text()).to.include('users.delete');",
                  "    }",
                  "});"
                ]
